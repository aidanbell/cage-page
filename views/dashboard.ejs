<%- include('./partials/header') %>
<div class="jumbotron">
  <h2><%= user.name.split(' ')[0] %>'s Dashboard</h2>
  <p>
    Welcome to your dashboard! When you add a movie to your watched list,
    it will show up below. You can also see what rules you've added, and how
    many people have liked them!
  </p> 
</div>
<div class="watched">
  <div class="row card-container">
<% watched.forEach((w) => { %>
  <a href="/movies/<%= w.movieId %>">
    <div class="col l2 m4 s6 hoverable">
      <div class="card">
        <div class="card-image">
          <img src="https://image.tmdb.org/t/p/w300_and_h450_bestv2/<%-w.poster_path %>" alt="Card image cap">
        </div>
        <div class="card-content">
          <h4 class="card-title"><%= w.title %></h4>
          <p class="small"><%= w.rules.length %> Total Rules</p>
          <div class="bottom card-action">
            <a href="/movies/<%= w.movieId %>">More!</a>
          </div>
        </div>
      </div>
    </div>
  </a>
<% }) %>
<div>
</div>


<%- include('./partials/footer') %>
