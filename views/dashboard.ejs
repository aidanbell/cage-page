<%- include('./partials/header') %>
<div class="jumbotron">
  <h2><%= user.name.split(' ')[0] %>'s Dashboard</h2>
  <p>
    Welcome to your dashboard! When you add a movie to your watched list,
    it will show up below. You can also see what rules you've added, and how
    many people have liked them!
  </p> 
</div>
<div class="watched">
  <div class="row card-container">
<% watched.forEach((w) => { %>
  <div class="col l2 m4 s12">
    <div class="card">
      <div class="card-image">
        <img src="https://image.tmdb.org/t/p/w300_and_h450_bestv2/<%-w.poster_path %>" alt="Card image cap">
      </div>
      <div class="card-content">
        <h4 class="font-weight-bold card-title"><%= w.title %></h4>
        <h5 class="font-weight-bold card-content"><%= w.rules.length %> Total Rules</h5>
        <div class="card-action">
          <a class="btn btn-success btn-details" href="/movies/<%= w.movieId %>">More!</a>
        </div>
      </div>
    </div>
  </div>
<% }) %>
<div>
</div>


<%- include('./partials/footer') %>
